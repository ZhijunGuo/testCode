<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
    
    <ImageView 
        android:layout_margin="3dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/default_avatar"
        android:id="@+id/feed_item_avatar"
        />
    <LinearLayout 
        android:layout_width="0dp"
        android:layout_weight="1.0"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="5dp"
        >
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView 
                android:layout_width="0dp"
                android:layout_weight="1.0"
                android:layout_height="wrap_content"
                android:text="张丽玲"
                android:textSize="16sp"
                android:id="@+id/news_content_item_name"
                />
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/transmit"
                android:text="12"
                android:id="@+id/news_content_item_transmit_count"
                />
            <TextView 
                android:layout_marginLeft="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/pinglun"
                android:text="56"
                android:id="@+id/news_content_item_review_count"
                />
        </LinearLayout>
        <TextView 
            android:textSize="16sp"
            android:background="@drawable/new_content_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/news_content_item_content"
            />
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#888888"
            android:id="@+id/news_content_item_time"
            />
    </LinearLayout>
    

</LinearLayout>