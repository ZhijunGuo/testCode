<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:orientation="horizontal"
    >

    <ImageView
        android:id="@+id/chat_item_left_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/default_avatar" />

    <TextView
        android:id="@+id/chat_item_left_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/chatfrom_bg_normal"
        android:gravity="center" />

    <ProgressBar
        android:id="@+id/chat_item_wait_file_load"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/chat_item_image_target"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginLeft="3dp"
        android:src="@drawable/ic_launcher"
        android:visibility="gone" />
    <!--
         <ProgressBar 
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/chat_item_progress_target"
        android:layout_gravity="center"
        android:visibility="gone"
        />
    -->

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1.0" />

    <ImageView
        android:id="@+id/chat_item_send_fail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/alert_dialog_icon"
        android:visibility="gone" />

    <ProgressBar
        android:id="@+id/chat_item_progress_my"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/chat_item_image_my"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginRight="3dp"
        android:src="@drawable/ic_launcher"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1.0"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1.0" />

        <TextView
            android:id="@+id/chat_item_right_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/chatto_bg_normal"
            android:gravity="center" />
    </LinearLayout>

    <ImageView
        android:id="@+id/chat_item_right_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/default_avatar" />

</LinearLayout>