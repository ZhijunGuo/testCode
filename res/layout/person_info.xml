<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/person_back"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/chat_top_back" >

        <Button
            android:id="@+id/person_info_top_left_button"
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:layout_gravity="left|center_vertical"
            android:background="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#ffffff"
            android:id="@+id/person_info_title"
            android:textSize="16sp" />

        <Button
            android:id="@+id/person_info_top_right_button"
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:layout_gravity="right|center_vertical"
            android:background="@drawable/pencil" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@drawable/person_info_top_back"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/person_info_avatar"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:src="@drawable/default_avatar" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/person_info_name"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="1.0"
                    android:gravity="left|bottom"
                    android:text="张丽玲"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/person_info_position"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="1.0"
                    android:gravity="left|center_vertical"
                    android:text="助理秘书"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DDDDDD" />

        <TextView
            android:id="@+id/person_info_company"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="静安中心，心中静安" />
    </LinearLayout>

    <TextView
        android:id="@+id/person_info_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/person_info_back"
        android:drawableLeft="@drawable/email"
        android:gravity="left|center"
        android:text=" email@163.com" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/person_info_mobile_parent"
         >

        <TextView
            android:id="@+id/person_info_mobile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1.0"
            android:background="@drawable/person_info_back"
            android:drawableLeft="@drawable/mobile"
            android:gravity="left|center"
            android:text=" 13912345678" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/person_info_sms"
            android:layout_gravity="center"
            android:background="@drawable/sms" />
    </LinearLayout>

    <TextView
        android:id="@+id/person_info_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/person_info_back"
        android:drawableLeft="@drawable/map"
        android:gravity="left|center"
        android:text=" 北京市东三环国贸大厦20F" />

    <TextView
        android:id="@+id/person_info_feed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/person_info_bottom_back"
        android:text="12345678" />

</LinearLayout>