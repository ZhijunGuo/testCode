<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/top_back" >

        <Button
            android:id="@+id/message_left_button"
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:background="@drawable/top_clock_button"
            android:gravity="center" />

        <TextView
            android:id="@+id/message_count_textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="消息(99+)"
            android:textColor="#ffffff"
            android:textSize="16sp" />

        <Button
            android:id="@+id/message_chat_add_button"
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            android:background="@drawable/top_chat_add_button"
            android:gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/search_back01" >

        <EditText
            android:id="@+id/message_search_contact"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/search_back"
            android:drawableLeft="@drawable/search_left"
            android:hint="@string/search_contact" />
    </LinearLayout>

    <ExpandableListView
        android:id="@+id/message_main_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:visibility="gone"
        />
    
    <ListView 
        android:id="@+id/message_main_list_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

</LinearLayout>