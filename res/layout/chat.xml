<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/chat_top_back" >

        <Button
            android:id="@+id/chat_top_back_button"
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:background="@drawable/back" />

        <TextView
            android:id="@+id/chat_top"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_weight="1.0"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="16sp" />

        <Button
            android:id="@+id/chat_top_group_button"
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:background="@drawable/group_button" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0"
        android:background="@drawable/chatting_bg_default" >

        <ListView
            android:id="@+id/chat_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:dividerHeight="0dp"
            android:stackFromBottom="true"
            android:listSelector="@drawable/mm_chat_listitem"
            android:transcriptMode="normal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/chat_footer_bg"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center" >

        <Button
            android:id="@+id/chat_audio_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/audio" />

        <Button
            android:id="@+id/chat_other_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/send_more_back" />

        <EditText
            android:id="@+id/chat_edit_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@drawable/chat_edit_normal" />

        <Button
            android:id="@+id/chat_send_button"
            android:layout_width="55dp"
            android:layout_height="40dp"
            android:background="@drawable/send_button" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#ff989898"
        android:id="@+id/chat_footer_send_more"
        android:visibility="gone"
        >

        <LinearLayout 
            android:layout_width="0dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1.0"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <ImageButton 
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/app_panel_expression_icon"
                android:background="@drawable/chat_app_panel_btn"
                android:id="@+id/chat_face_image"
                android:layout_gravity="center"
                />
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="表情"
                android:textColor="@color/white"
                android:layout_gravity="center"
                />
        </LinearLayout>
        <LinearLayout 
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <ImageButton 
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/app_panel_pic_icon"
                android:background="@drawable/chat_app_panel_btn"
                android:id="@+id/chat_face_image"
                android:layout_gravity="center"
                />
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:gravity="center"
                android:text="图片"
                android:layout_gravity="center"
                />
        </LinearLayout>
        <LinearLayout 
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <ImageButton 
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/app_panel_video_icon"
                android:background="@drawable/chat_app_panel_btn"
                android:id="@+id/chat_face_image"
                android:layout_gravity="center"
                />
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="视频"
                android:textColor="@color/white"
                android:layout_gravity="center"
                />
        </LinearLayout>
        <LinearLayout 
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <ImageButton 
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/app_panel_location_icon"
                android:background="@drawable/chat_app_panel_btn"
                android:id="@+id/chat_face_image"
                android:layout_gravity="center"
                />
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="位置"
                android:textColor="@color/white"
                android:layout_gravity="center"
                />
        </LinearLayout>
        
    </LinearLayout>

</LinearLayout>