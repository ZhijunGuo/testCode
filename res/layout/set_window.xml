<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/task_popwindow_back"
    android:focusable="false"
    android:orientation="vertical" >
    
	<LinearLayout 
	    android:layout_marginTop="15dp"
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="1.0"
	    android:gravity="center_vertical"
	    >
	    <TextView 
	        android:layout_width="0dp"
	        android:layout_weight="1.0"
	        android:layout_height="1dp"
	        />
	    <CheckBox 
	        android:id="@+id/set_window_instancy"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        style="@style/task_top_checkbox"
	        android:text="紧急"
	        android:textColor="#FFFFFF"
	        android:drawableLeft="@drawable/task_checked"
	        />
	    <ImageView 
	        android:layout_marginLeft="15dp"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/red_square"
	        android:layout_gravity="center"
	        />
	    <TextView 
	        android:layout_width="0dp"
	        android:layout_weight="1.0"
	        android:layout_height="1dp"
	        />
	</LinearLayout>
	<TextView 
	    android:layout_width="match_parent"
	    android:layout_height="1dp"
	    android:background="@drawable/task_popwindow_back_div"
	    />
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="1.0"
	    android:gravity="center"
	    >
	    <TextView 
	        android:layout_width="0dp"
	        android:layout_weight="1.0"
	        android:layout_height="1dp"
	        />
	    <CheckBox 
	        android:id="@+id/set_window_important"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="重要"
	        android:textColor="#FFFFFF"
	        style="@style/task_top_checkbox"
	        android:drawableLeft="@drawable/task_checked"
	        />
	    <ImageView 
	        android:layout_marginLeft="15dp"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/yellow_square"
	         android:layout_gravity="center"
	        />
	    <TextView 
	        android:layout_width="0dp"
	        android:layout_weight="1.0"
	        android:layout_height="1dp"
	        />
	</LinearLayout>
	<TextView 
	    android:layout_width="match_parent"
	    android:layout_height="1dp"
	    android:background="@drawable/task_popwindow_back_div"
	    />
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="1.0"
	    android:gravity="center_vertical"
	    >
	    <TextView 
	        android:layout_width="0dp"
	        android:layout_weight="1.0"
	        android:layout_height="1dp"
	        />
	    <CheckBox 
	        android:id="@+id/set_window_common"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="普通"
	        android:textColor="#FFFFFF"
	        style="@style/task_top_checkbox"
	        android:drawableLeft="@drawable/task_checked"
	        />
	    <ImageView 
	        android:layout_marginLeft="15dp"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/green_square"
	        android:layout_gravity="center"
	        />
	    <TextView 
	        android:layout_width="0dp"
	        android:layout_weight="1.0"
	        android:layout_height="1dp"
	        />
	</LinearLayout>
    
</LinearLayout>